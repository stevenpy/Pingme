<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="thumb-img"></div>
      <div class="user-name">
        <%= ping.user.user_name %>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag ping.image.url(:medium), class:'img-responsive'), ping_path(ping) %>
    </div>
    <div class="post-bottom">
      <div class="caption">
        <div class="user-name">
          <%= ping.user.user_name %>
        </div>
        <%= ping.caption %>
      </div>
      <% if ping.comments %>
        <% ping.comments.each do |comment| %>
          <div class="comment">
            <div class="user-name">
              <%= comment.user.user_name %>
            </div>
            <div class="comment-content">
              <%= comment.content %>
            </div>
            <% if comment.user == current_user %>
              <%= link_to ping_comment_path(ping, comment), method: :delete, data: { confirm: "Are you sure?" } do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="comment-like-form row">
      <div class="like-button col-sm-1">
        <span class="glyphicon glyphicon-heart-empty"></span>
      </div>
      <div class="comment-form col-sm-11">
        <%= form_for [ping, ping.comments.new] do |f| %>
          <%= f.text_field :content, placeholder: 'Add a comment...' %>
        <% end %>
      </div>
    </div>
  </div>
</div>